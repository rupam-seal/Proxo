<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pyxller" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_900</item><!-- teal_200 -->
        <item name="colorSecondaryVariant">@color/secondary_900</item><!-- teal_200 -->
        <item name="colorOnSecondary">@color/primary_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextInputField Outline -->
    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/shimmer_color</color>

    <style name="tab_layout_text_all_caps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>